{% extends "base.html.j2" %}

{% block content %}
    <h1>Registration</h1>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div>
            {{ form.username.label(class="form-label reg") }}<br>
            {{ form.username(class="form-control reg-input") }}<br>
            {% for error in form.username.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>
            {{ form.email.label(class="form-label reg") }}<br>
            {{ form.email(class="form-control reg-input") }}<br>
            {% for error in form.email.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>
            {{ form.password.label(class="form-label reg") }}<br>
            {{ form.password(class="form-control reg-input") }}<br>
            {% for error in form.password.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>
            {{ form.password2.label(class="form-label reg") }}<br>
            {{ form.password2(class="form-control reg-input") }}<br>
            {% for error in form.password2.errors %}
            <strong><span style="color: red;">{{ error }}</span></strong>
            {% endfor %}
        </div>
        <div>{{ form.submit(class="reg-btn btn btn-success") }}</div>
    </form>
{% endblock %}